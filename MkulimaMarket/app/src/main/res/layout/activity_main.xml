            android:layout_marginTop="160dp"/>
        <EditText
            android:id="@+id/sellersContactText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="130dp"
            android:inputType="phone" />

        <!--Sellers Tag Price-->
        <TextView
            android:id="@+id/sellersTagPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selling Price(Ksh@KG):"
            android:editable="false"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:layout_marginTop="210dp"/>
        <EditText
            android:id="@+id/sellingPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="180dp"
            android:inputType="textPersonName"
            android:text="" />

        <!--Sale Description-->
        <TextView
            android:id="@+id/saleDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sellers Product Description:"
            android:editable="false"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:layout_marginTop="260dp"/>

        <EditText
            android:id="@+id/saleDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16dp"
            android:layout_marginTop="280dp"
            android:inputType="textMultiLine"
            android:text=""/>

        <!--Submit Sale-->
        <Button
            android:id="@+id/saleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="18dp"
            android:text="submit Sales"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_green_dark"
            android:layout_marginTop="400dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-black"/>

    <!--This is the Bottom Navigation bar-->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>