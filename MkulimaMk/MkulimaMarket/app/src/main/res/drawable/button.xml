<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#11912F" />
            <gradient android:angle="-45" android:startColor="#11912F"
                android:endColor="#11912F"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#11912F" />
            <solid android:color="#11912F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#11912F" />
            <gradient android:angle="-90" android:startColor="#11912F"
                android:endColor="#11912F" />
        </shape>
    </item>
</selector>